<h1><%= @article.title %></h1>
<div>
  <%= @article.text %>
</div>
<h2>Comments</h2>
<dl>
  <% @article.comments.each do |comment| %>
      <dt><%= comment.commenter %></dt>
      <dd><%= comment.body %><br><small><%= time_ago_in_words comment.created_at %></small></dd>
  <% end %>
</dl>

<h3>Add comment</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
